generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contatos {
  id          String    @id
  nome        String
  telefones   String?
  grupos      String?
  aniversario String?
  email       String?
  address     String?
  notas       String?
  status      Boolean?  @default(true)
  modified    DateTime? @updatedAt
  created     DateTime? @default(now())
}

model Grupos {
  nome String @id
}

model Messages {
  id          String    @id
  to          String
  displayName String?
  serialized  String?
  body        String?
  from        String?
  group       Group?    @default(CACHE)
  notifyName  String?
  self        String?
  caption     String?
  mimetype    String?
  type        String?
  data        String?   @db.Text
  old         String?
  info        String?
  status      Boolean?  @default(true)
  hasMedia    Boolean?  @default(false)
  created     DateTime? @default(now())
  modified    DateTime? @updatedAt
}

enum Group {
  SENDING
  CANCELED
  CACHE
}
